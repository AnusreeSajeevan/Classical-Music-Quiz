<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.anu.classicalmusicquizapp.MainActivity">

    <Button
        android:id="@+id/bt_start_new_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:textColor="@color/white"/>
    <TextView
        android:layout_marginTop="@dimen/ScoreMarginTop"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/scoreTextSize"
        android:textColor="@color/black"
        android:id="@+id/txt_high_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/txt_high_score"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/scoreTextSize"
        android:textColor="@color/black"
        android:id="@+id/txt_your_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
